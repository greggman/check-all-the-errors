  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/check-all-the-errors",
      "args": [
        "--follow-links=both",
        "./test",
        "tests"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test webgl-fundamentals",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/check-all-the-errors",
      "args": [
        "--follow-links=local",
        "../webgl-fundamentals/out",
        "webgl/lessons"
      ]
    }
  ]
}